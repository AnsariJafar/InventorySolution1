@model IEnumerable<InventoryManagementSystem1.Models.InvoiceSummaryVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("New", "Create",null, new {@class="btn btn-success"})
</p>
<table class="table table-bordered table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceAmount)
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceAmount)
                </td>

               <td>


                    <a href="@Url.Action("Edit","InvoiceSummaries",new { id = item.EntryId })"><span class="glyphicon glyphicon-pencil"></span></a>
                    

                    <a href="@Url.Action("Delete","InvoiceSummaries",new { id = item.EntryId })"><span class="glyphicon glyphicon-trash"></span></a>

                </td>
            </tr>
        }
    </tbody>
    

   

</table>

@section DataTableScript {

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
} 
